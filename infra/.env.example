# ============================================================
# 서울아산병원 IDP — 환경변수 템플릿
#
# 사용법:
#   cp .env.example .env.dev    # 개발 환경
#   cp .env.example .env.staging # 스테이징 환경
#   cp .env.example .env.prod   # 프로덕션 환경
#
# 주의: .env.* 파일은 절대 git에 커밋하지 마세요.
# ============================================================

# ── 환경 구분 ──
ENVIRONMENT=dev                # dev | staging | prod
LOG_LEVEL=DEBUG                # DEBUG | INFO | WARNING | ERROR
DEBUG=true                     # true | false

# ── PostgreSQL (Airflow/MLflow 공용) ──
POSTGRES_USER=asan
POSTGRES_PASSWORD=CHANGE_ME
POSTGRES_DB=asan_db

# ── OMOP CDM DB ──
OMOP_DB_HOST=localhost
OMOP_DB_PORT=5436
OMOP_DB_USER=omopuser
OMOP_DB_PASSWORD=CHANGE_ME

# ── Redis ──
REDIS_PASSWORD=CHANGE_ME

# ── Airflow ──
# Fernet key 생성: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW_FERNET_KEY=CHANGE_ME
AIRFLOW_SECRET_KEY=CHANGE_ME
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=CHANGE_ME

# ── Superset ──
SUPERSET_SECRET_KEY=CHANGE_ME
SUPERSET_ADMIN_USER=admin
SUPERSET_ADMIN_PASSWORD=CHANGE_ME

# ── JWT (인증) ──
JWT_SECRET=CHANGE_ME_MIN_32_CHARS
AUTH_REQUIRED=true             # dev: false, staging/prod: true

# ── LLM ──
LLM_API_URL=http://localhost:28888/v1
LLM_MODEL=Qwen3-32B-AWQ
OPENAI_API_KEY=
EMBEDDING_API_URL=http://localhost:8082

# ── Milvus Vector DB ──
MILVUS_HOST=localhost
MILVUS_PORT=19530

# ── MinIO S3 Object Storage ──
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME
MINIO_ENDPOINT=localhost:19000

# ── Neo4j ──
NEO4J_AUTH=neo4j/CHANGE_ME

# ── Grafana ──
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=CHANGE_ME

# ── 서비스 설정 ──
API_PORT=8000
API_WORKERS=1                  # dev: 1, staging: 2, prod: 4
CORS_ORIGINS=http://localhost:5173
ENABLE_DOCS=true               # prod: false
